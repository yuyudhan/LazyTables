# FilePath: .editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{md,markdown}]
max_line_length = 80
trim_trailing_whitespace = false

[*.{toml,yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab

[*.rs]
max_line_length = 80

[*.go]
indent_style = space
indent_size = 4

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

